# CMake package configuration file for the SofaPython plugin.
# It defines the following variables:
# - SofaPython_INCLUDE_DIRS
# - SofaPython_LIBRARIES

@PACKAGE_INIT@

set_and_check(SOFAPYTHON_INCLUDE_DIR "@PACKAGE_SOFAPYTHON_INCLUDE_DIR@")

check_required_components(SofaPython)

find_package(PythonLibs 2.7 REQUIRED)
find_package(SofaGui REQUIRED)
find_package(SofaGeneral REQUIRED)
find_package(SofaMisc REQUIRED)

set(SOFA_HAVE_PYTHON "@SOFA_HAVE_PYTHON@")

if(NOT TARGET SofaPython)
	include("${CMAKE_CURRENT_LIST_DIR}/SofaPythonTargets.cmake")
endif()

set(SofaPython_LIBRARIES SofaPython)
set(SofaPython_INCLUDE_DIRS ${SOFAPYTHON_INCLUDE_DIR} ${SofaGui_INCLUDE_DIRS})
